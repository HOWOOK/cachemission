<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="appfontultralight" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/nanumbarungothicultralight_</item>
    </style>

    <style name="appfontlight" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/nanumbarungothiclight_</item>
    </style>

    <style name="appfontregular" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/nanumbarungothicregular_</item>
    </style>

    <style name="appfontbold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/nanumbarungothicbold_</item>
    </style>
</resources>
