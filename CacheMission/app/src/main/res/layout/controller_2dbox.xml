<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/controllerCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <android.support.constraint.ConstraintLayout
        android:id="@+id/boxCL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnCL"
        >

       <View
           android:id="@+id/youcanttouchanymore"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#00000000"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>

       <View
           android:id="@+id/topLeftFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/top_line_value"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/left_line_value"
           />

       <View
           android:id="@+id/topFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/top_line_value"
           app:layout_constraintStart_toEndOf="@+id/left_line_value"
           app:layout_constraintEnd_toStartOf="@+id/right_line_value"
           />

       <View
           android:id="@+id/topRightFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/top_line_value"
           app:layout_constraintStart_toStartOf="@+id/right_line_value"
           app:layout_constraintEnd_toEndOf="parent"
           />

       <View
           android:id="@+id/leftFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toBottomOf="@+id/top_line_value"
           app:layout_constraintBottom_toTopOf="@+id/bottom_line_value"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/left_line_value"
           />

       <View
           android:id="@+id/rightFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toBottomOf="@+id/top_line_value"
           app:layout_constraintBottom_toTopOf="@+id/bottom_line_value"
           app:layout_constraintStart_toEndOf="@+id/right_line_value"
           app:layout_constraintEnd_toEndOf="parent"
           />

       <View
           android:id="@+id/bottomLeftFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toBottomOf="@+id/bottom_line_value"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toStartOf="@+id/left_line_value"
           />

       <View
           android:id="@+id/bottomFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toBottomOf="@+id/bottom_line_value"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toEndOf="@+id/left_line_value"
           app:layout_constraintEnd_toStartOf="@+id/right_line_value"
           />

       <View
           android:id="@+id/bottomRightFade"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#80FFFFFF"
           app:layout_constraintTop_toBottomOf="@+id/bottom_line_value"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toEndOf="@+id/right_line_value"
           app:layout_constraintEnd_toEndOf="parent"
           />

       <View
           android:id="@+id/centerimage"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:background="#00000000"
           app:layout_constraintBottom_toTopOf="@+id/bottom_line_value"
           app:layout_constraintEnd_toStartOf="@+id/right_line_value"
           app:layout_constraintStart_toEndOf="@+id/left_line_value"
           app:layout_constraintTop_toBottomOf="@+id/top_line_value" />

        <View
            android:id="@+id/top_line_value"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/colorDark2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/top_line" />

        <View
            android:id="@+id/top_line"
            android:layout_width="0dp"
            android:layout_height="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottom_line_value"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/colorDark2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bottom_line" />

        <View
            android:id="@+id/bottom_line"
            android:layout_width="0dp"
            android:layout_height="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/left_line_value"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="@color/colorDark2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/left_line"/>

        <View
            android:id="@+id/left_line"
            android:layout_width="3dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/right_line_value"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="@color/colorDark2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/right_line"/>

        <View
            android:id="@+id/right_line"
            android:layout_width="3dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/topleft_corner"
            android:layout_width="3dp"
            android:layout_height="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/topright_corner"
            android:layout_width="3dp"
            android:layout_height="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bottomright_corner"
            android:layout_width="3dp"
            android:layout_height="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/bottomleft_corner"
            android:layout_width="3dp"
            android:layout_height="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

       <ImageView
           android:id="@+id/pinbtn"
           android:layout_width="22dp"
           android:layout_height="28dp"
           android:layout_marginTop="22dp"
           android:layout_marginRight="13dp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           />


   </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:textSize="25dp"
        android:fontFamily="@font/nanumsquareb_"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/btnCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/thumbnailImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/btnCL"
        app:layout_constraintBottom_toBottomOf="@+id/btnCL"
        app:layout_constraintStart_toStartOf="parent"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btnCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxCL"
        app:layout_constraintBottom_toBottomOf="parent"
        >



        <Button
            android:id="@+id/sendbtn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/colorDark1"
            android:text="제출하기 +25원"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bmjua_"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/completebtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/completebtn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/colorPrimary"
            android:text="모든 물체 제출 완료"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/bmjua_"
            app:layout_constraintTop_toBottomOf="@+id/sendbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>