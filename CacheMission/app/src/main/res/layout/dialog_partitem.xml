<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/part_thumb"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/part_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nanumsquareb_"
        android:text="전신주"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/part_thumb"
        app:layout_constraintStart_toStartOf="@+id/part_thumb"
        app:layout_constraintTop_toBottomOf="@+id/part_thumb" />

    <TextView
        android:id="@+id/part_countText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareb_"
        android:text="11/11"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/part_thumb"
        app:layout_constraintEnd_toEndOf="@+id/part_thumb"
        app:layout_constraintTop_toBottomOf="@+id/part_text"
        />
</android.support.constraint.ConstraintLayout>