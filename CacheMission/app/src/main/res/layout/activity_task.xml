<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/taskConstLayout"
    tools:context="com.selectstar.hwshin.cashmission.Activity.TaskListActivity">

    <android.support.constraint.Guideline
        android:id="@+id/optionguideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/tasktitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/taskback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/main_explain_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tasktitletext"
            style="@style/normalTitle"
            android:layout_marginStart="8dp"
            android:text="@string/textnotload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/goldpre"
            app:layout_constraintStart_toEndOf="@+id/taskback"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/howbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/goldnow"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/questionmark" />

        <TextView
            android:id="@+id/goldpre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/nanumsquareb_"
            android:textColor="#90FFFFFF"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/howbtn"
            app:layout_constraintStart_toEndOf="@id/tasktitletext"
            app:layout_constraintTop_toBottomOf="@+id/goldnow" />

        <TextView
            android:id="@+id/goldnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareb_"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/goldpre"
            app:layout_constraintEnd_toStartOf="@+id/howbtn"
            app:layout_constraintStart_toEndOf="@id/tasktitletext"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goldpre_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/nanumsquareb_"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/goldpre"
            app:layout_constraintTop_toBottomOf="@+id/goldnow_anim" />

        <TextView
            android:id="@+id/goldnow_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareb_"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/goldpre_anim"
            app:layout_constraintEnd_toStartOf="@+id/goldnow"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/regionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nanumsquareb_"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tasktitle" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/taskview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/controller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regionText"
        app:layout_constraintVertical_weight="10" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskview"
        app:layout_constraintVertical_weight="10" >


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionguideline"        >
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>