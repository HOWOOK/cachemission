<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/CL1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/design_usermain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5">

            <android.support.constraint.Guideline
                android:id="@+id/guideline_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.85" />

            <ImageView
                android:id="@+id/userrank"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_progressbar"
                app:layout_constraintStart_toStartOf="@+id/guideline_rankImage"
                app:srcCompat="@drawable/rank_begginner" />

            <ProgressBar
                android:id="@+id/mainProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progress_main_background"
                android:minHeight="3dp"
                android:maxHeight="3dp"
                android:max="100"
                app:layout_constraintBottom_toBottomOf="@+id/guideline_progressbar"
                app:layout_constraintLeft_toRightOf="@+id/guideline_rankImage"
                app:layout_constraintRight_toLeftOf="@+id/guideline_money"
                />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_rankImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <Button
                android:id="@+id/drawviewbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="@drawable/button1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <android.support.constraint.ConstraintLayout
                android:id="@+id/userinfo"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_money"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_userinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.7" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/none"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:fontFamily="@font/lee_m_"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textView1"
                    />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/maincard"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="누적 적립금"
                    app:layout_constraintEnd_toStartOf="@+id/money"
                    app:layout_constraintBottom_toTopOf="@+id/textView2"
                    />

                <TextView
                    android:id="@+id/money"
                    style="@style/maincard"
                    android:layout_width="50dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textView2"
                    />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/maincard"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="적립 예정금"
                    app:layout_constraintEnd_toStartOf="@+id/maybemoney"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    />

                <TextView
                    android:id="@+id/maybemoney"
                    style="@style/maincard"
                    android:layout_width="50dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textView3"
                    />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/maincard"
                    android:text="수행 신뢰도"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    app:layout_constraintEnd_toStartOf="@+id/reliability"
                    app:layout_constraintBottom_toBottomOf="@+id/guideline_userinfo"
                    />

                <TextView
                    android:id="@+id/reliability"
                    style="@style/maincard"
                    android:layout_width="50dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/guideline_userinfo"
                    />


            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/CL2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EEEEEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CL1">

            <ListView
                android:id="@+id/taskList"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:divider="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ListView>
        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="left"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F3F3F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/usernamedrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/none"
                android:textSize="15sp"
                android:textColor="@color/fontColorActive"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/settingbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/setting" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/exchange"
            style="@style/normalTextList"
            android:text="환전신청"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"/>

        <TextView
            android:id="@+id/suggestion"
            style="@style/normalTextList"
            android:text="건의사항"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exchange" />

    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.DrawerLayout>