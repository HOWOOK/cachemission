<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/CL1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/design_usermain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/guideline5">

            <android.support.constraint.Guideline
                android:id="@+id/guideline_hexagon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.50" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

            <Button
                android:id="@+id/drawviewbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:background="@drawable/button1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/hexagon1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_hexagon"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hexagon1" />

            <ImageView
                android:id="@+id/hexagon2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintBottom_toBottomOf="@id/hexagon1"
                app:layout_constraintEnd_toEndOf="@id/hexagon1"
                app:layout_constraintStart_toStartOf="@id/hexagon1"
                app:layout_constraintTop_toTopOf="@id/hexagon1"
                app:srcCompat="@drawable/hexagon2" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/guideline_money"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_money2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/none"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="@font/exo2semibold_"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/guideline_money2" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="내 통장 적립금"
                    android:textColor="#AAFFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumsquarer_"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/money" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="적립 예정 금액"
                    android:textColor="#AAFFFFFF"
                    android:textSize="10sp"
                    android:fontFamily="@font/nanumsquarer_"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/guideline_money2" />

                <TextView
                    android:id="@+id/maybemoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/none"
                    android:textColor="#AAFFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="@font/exo2semibold_"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView2" />
            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/userrank"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="22dp"
                app:layout_constraintBottom_toBottomOf="@id/hexagon2"
                app:layout_constraintEnd_toEndOf="@id/hexagon2"
                app:layout_constraintStart_toStartOf="@id/hexagon2"
                app:layout_constraintTop_toTopOf="@id/hexagon2"
                app:srcCompat="@drawable/recordstartbtn"
                />


            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/none"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:fontFamily="@font/lee_m_"
                app:layout_constraintBottom_toBottomOf="@id/hexagon2"
                app:layout_constraintEnd_toEndOf="@id/hexagon2"
                app:layout_constraintStart_toStartOf="@id/hexagon2"
                app:layout_constraintTop_toTopOf="@id/hexagon2" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/CL2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EEEEEE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CL1">

            <ListView
                android:id="@+id/taskList"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:divider="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ListView>
        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="left"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F3F3F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/usernamedrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/none"
                android:textSize="15sp"
                android:textColor="@color/fontColorActive"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/settingbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/setting" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/exchange"
            style="@style/normalTextList"
            android:text="환전신청"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"/>

        <TextView
            android:id="@+id/suggestion"
            style="@style/normalTextList"
            android:text="건의사항"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exchange" />

    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.DrawerLayout>